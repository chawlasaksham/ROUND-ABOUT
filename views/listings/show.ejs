<% layout("listings/layouts/boilerplate")%><body>
    <div class="row  mt-3">
        <div class="col-8 offset-3">
        <h3>listings details</h3>
    </div>
    
        <div class="card col-6 offset-3 show-card">        
            <img 
            src="<%= listing.image.url %>" 
            class="card-img-top show-img" 
            alt="listing_image">
            <div class="card-body">
              <p class="card-text"> 
                <%= listing.title%> <br>
                <%= listing.description%> <br>
                 &#8377 <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location%>br
                <%= listing.country%> </p><br>
            </div>
          </div>
   
    <div class="btns mb-1">
    <a href="<%= listing._id %>/edit" class="btn btn-dark cols-2 offset-3 edit-btn">edit </a>
   

    
    <form method="post" action="/listings/<%=listing._id%>/?_method=delete">
        <button class="btn  btn-dark cols-2 offset-5">delete</button>
    
    </form>
    </div> </div>
</body>
